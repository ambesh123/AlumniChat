<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ambeshtiwari.alumnichat.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAIN MENU"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000"
        android:background="#908070"
        android:layout_marginTop="10sp"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_margin="20sp"
        >
        <ImageButton
            android:src="@drawable/postque"
            android:layout_column="0"
            android:layout_margin="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="60sp"
            />
        <ImageButton
            android:src="@drawable/chat"
            android:layout_column="1"
            android:layout_margin="30sp"
            android:layout_marginTop="60sp"
            android:onClick="toContactActivity"
            />
        <ImageButton
            android:src="@drawable/myacc"
            android:layout_column="0"
            android:layout_margin="30sp"
            android:layout_marginLeft="10sp"
            />
        <ImageButton
            android:src="@drawable/addalumni"
            android:layout_column="1"
            android:layout_margin="30sp"
            />
        <ImageButton
            android:src="@drawable/feedback"
            android:layout_margin="30sp"
            android:layout_marginLeft="10sp"
            android:onClick="feedback"
            />
        <ImageButton
            android:src="@drawable/logout"
            android:layout_column="1"
            android:layout_margin="30sp"
            android:onClick="logOut"
            />
        
    </GridLayout>
</RelativeLayout>
